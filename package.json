    "copyfiles": "./node_modules/.bin/copyfiles src/**/locales/*.json src/locales/globals/*.json 'src/**/*.njk' -u 1 ./dist",
    "start": "node ./dist/server.js",
    "eslint": "npx eslint src/",
    "postinstall": "npm run build:sass"
  },
